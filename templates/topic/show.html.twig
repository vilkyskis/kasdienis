{% extends 'base.html.twig' %}

{% block title %}Topic{% endblock %}

{% block body %}
    <div class="container">
        <h1>Topic</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Topic Id</th>
                <th>Topic Name</th>
            </tr>
            <tr>
                <td>{{ topic.id }}</td>
                <td>{{ topic.name }}</td>
            </tr>
            {% for posted in topic.posts|sort('desc') %}
                <tr>
                    <td>Post nr. {{ posted.id }} from topic nr. {{ topic.id }}</td>
                    <td>Post title: {{ posted.title }}</td>
                    <td><a href="{{ path('post_show', {'id': posted.id}) }}">show</a>
                        <a href="{{ path('post_edit', {'id': posted.id}) }}">edit</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('topic_index') }}">back to list</a>

        <a href="{{ path('topic_edit', {'id': topic.id}) }}">edit</a>

        {{ include('topic/_delete_form.html.twig') }}
    </div>
{% endblock %}
