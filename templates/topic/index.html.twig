{% extends 'base.html.twig' %}

{% block title %}Topic index{% endblock %}

{% block body %}
<div class="container">
    <h1>Topic index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Posts</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for topic in topics %}
            <tr>
                <td>{{ topic.name }}</td>
                <td>{{ topic.posts|length }}</td>
                <td>
                    <a href="{{ path('topic_show', {'id': topic.id}) }}">show</a>
                    <a href="{{ path('topic_edit', {'id': topic.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('topic_new') }}">Create new</a>
    </div>
{% endblock %}
