{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">

        <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
        <link rel="stylesheet" type="text/css" href="/css/util.css">

                <div class="logo_login"><h1 class="text-center text-white" style="margin-top: 75px;font-size:70px;"></h1>
                <div class="container" style="position:absolute;top:185px;left: 375px;margin-top:30px;margin-bottom:30px; z-index:99; width:100%">
                <div class="container text-center" style="background-color: var(--login-color); ;-webkit-border-radius: 10px;border-radius: 10px;">
<span class="login100-form-title p-t-20 p-b-45 noselect" style="font-size: 100px">{% trans %}Register{% endtrans %}</span>

<button onclick="window.location.href='{{ path('index') }}'" id="back-to-list" title="{% trans %}Go to list{% endtrans %}"><i class="fas fa-chevron-left"></i></button> 
<a href="{{ path('fos_user_security_login') }}" id="post-add" title="{% trans %}Login{% endtrans %}"><i class="fas fa-sign-in-alt" style="position:relative; top:10px;"></i></a> 
    <div class="input-group mb-3 text-center" style="text-align:center">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">@</span>
                </div>
        {{ form_widget(form.email, {'attr': {'style': 'width:96%;color:var(--font-color)' , 'placeholder': form.email.vars.label, 'class' : 'form-control p-3 text-center'}}) }}

        <small>{{ form_help(form.email) }}</small>

        <div class="form-error">
            {{ form_errors(form.email) }}
        </div>
    </div>

    <div class="input-group mb-3 text-center" style="text-align:center">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="fa fa-user" style="width:5%;"></i></span>
                </div>
        {{ form_widget(form.username, {'attr': {'style': 'width:96%;color:var(--font-color)' , 'placeholder': form.username.vars.label, 'class' : 'form-control p-3 text-center'}}) }}

        <small>{{ form_help(form.username) }}</small>

        <div class="form-error">
            {{ form_errors(form.username) }}
        </div>
    </div>
    <div class="input-group mb-3 text-center" style="text-align:center">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="fa fa-lock" style="width:5%;"></i></span>
                </div>
        {{ form_widget(form.plainPassword.first, {'attr': {'style': 'width:96%;color:var(--font-color)' , 'placeholder': form.plainPassword.first.vars.label, 'class' : 'form-control p-3 text-center'}}) }}

        <small>{{ form_help(form.plainPassword.first) }}</small>

        <div class="form-error">
            {{ form_errors(form.plainPassword.first) }}
        </div>
    </div>

    <div class="input-group mb-3 text-center" style="text-align:center">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="fa fa-lock" style="width:5%;"></i></span>
                </div>
        {{ form_widget(form.plainPassword.second, {'attr': {'style': 'width:96%;color:var(--font-color)' , 'placeholder': form.plainPassword.second.vars.label, 'class' : 'form-control p-3 text-center'}}) }}

        <small>{{ form_help(form.plainPassword.second) }}</small>

        <div class="form-error">
            {{ form_errors(form.plainPassword.second) }}
        </div>
    </div>
{{ form_rest(form) }}


    <div class="container-login100-form-btn p-t-10">
        <input class="nav-link btn btn-primary btn-lg btn-block" type="submit" value="{{ 'registration.submit'|trans }}" style="width:100%" />
    </div><br>
            </div>
        </div>
    </div>
    

{{ form_end(form) }}



