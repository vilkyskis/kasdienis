{% block title %}Frontpage{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-white">FRONTPAGE</h1>

        <table class="table table-striped table-bordered text-white">
            <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Data</th>
                <th>Author</th>
                <th>Upvotes</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.Title }}</td>
                    <td>{{ post.Date ? post.Date|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ post.Data }}</td>
                    <td>{{ post.author }}</td>
                    <td>{{ post.upvotes }}</td>
                    <td>
                        <a href="{{ path('post_show', {'id': post.id}) }}">show</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% if is_granted('ROLE_USER')%}
            <a href="{{ path('post_new') }}">Create new</a>
        {% endif %}
    </div>
{% endblock %}